<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAzonosito"
        android:layout_marginTop="5px"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etJelszo"
        android:layout_marginTop="5px"
        android:layout_below="@+id/etAzonosito"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBejelentkezes"
        android:layout_marginTop="5px"
        android:layout_below="@+id/etJelszo"
        android:text="BEJELENTKEZÉS"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegisztracio"
        android:layout_marginTop="5px"
        android:layout_below="@+id/btnBejelentkezes"
        android:text="REGISZTRÁCIÓ"
        />


</RelativeLayout>